<section class="container">
	<div class="row-fluid paddingb45">
		<div class="cart span7">
			<fieldset>
				<legend>
					<h4>Cart</h4>
				</legend>
				<form class="form-inline clearfix">
						<div class="dropdown dropup form-control pull-left">
							<div class="btn dropdown-toggle" data-toggle="dropdown">
								<span>Cart value:</span>
								<span>{{cartValue}}</span>
								<span class="caret"></span>
							</div>
							<ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
								{{#cartItems}}
								<li>
									<span>{{Name}}</span>,
									<span>{{Amount}}</span>,
									<span>{{Price}}</span>
								</li>
								<li role="separator" class="divider"></li>
								{{/cartItems}}
							</ul>
						</div>
						{{!-- <a href="{{registrationUrl}}" class="btn btn-info form-control pull-right" style="margin-left: 20px">Registration</a> --}}
						<a href="/registration/register" class="btn btn-info form-control pull-right" style="margin-left: 20px">
							<i class="icon-shopping-cart icon-white"></i> Register
						</a>
						<a href="/checkout" class="btn btn-info form-control pull-right">
							<i class="icon-shopping-cart icon-white"></i> Checkout
						</a>
				</form>
			</fieldset>
		</div>
	</div>
</section>